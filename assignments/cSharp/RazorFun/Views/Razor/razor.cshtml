    <title>Razor Fun</title>
</head>
<body>
    <header>
        <h1>Razor Fun</h1>
        <nav>
            <a href="/razor">Home</a>
        </nav>
    </header>
    <main>
        @{
            var StringList = new List<string>
            {
                "Apple Pie",
                "Pizza",
                "Cinnamon Rolls",
                "Lasagna",
                "Donuts",
                "Chocolate cake",
                "Burritos",
            };
                
            @* foreach(var word in StringList)
            {
                // We can render HTML from within C# code!
